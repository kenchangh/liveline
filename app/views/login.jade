extends front-layout

block content
  div.container-fluid
    div.front-content.col-md-4.col-md-offset-4
      h1.text-center Login to Liveline
      input#login-email.login-form.form-control(type='email', placeholder='Your email')
      br
      input#login-pw.login-form.form-control(type='password', placeholder='Your password')
      br
      div.pull-left.checkbox
        label
          input#login-rmb-me(type='checkbox') 
          p Remember me &nbsp;&#8226;&nbsp; <a href='/forgot-password'>Forgot your password?</a>

      button.pull-right.btn.btn-lg.btn-success Sign In

