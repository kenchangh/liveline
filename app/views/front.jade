extends layout

block content
  div.container-fluid

    div.front-content.col-md-8.col-md-offset-2
      div.pull-left 
        h1.front-headline Liveline connects you and your loved ones,<br/>real time.

      div.pull-right
        h2 Create an account
        br
        input#signup-uid.signup-form.form-control(type='text', placeholder='Your username')
        br
        input#signup-pw.signup-form.form-control(type='password', placeholder='Your password')
        br
        input.signup-form.form-control(type='password', placeholder='Reenter password')
        br
        button#signup-btn.btn.btn-lg.btn-default(type='submit') Create an account

    div.front-content.text-center.col-md-8.col-md-offset-2
      h2.feature-header Why you'll love Liveline

      mixin feature(glyphicon)
        td
          div.front-features.element-centered
            span.glyphicon.feature-icon(class!=glyphicon)
          if block
            block
          else
            p A really cool feature.

      table.feature-table.element-centered
        tr.feature-row
          +feature('glyphicon-cloud')
            p.feature-description Video chat in the browser (no installations!)
          +feature('glyphicon-heart-empty')
            p.feature-description Beautiful interface that you'll love

        tr.feature-row
          +feature('glyphicon-globe')
            p.feature-description Chat with loved ones around the globe
          +feature('glyphicon-ok-sign')
            p.feature-description Fast, stable user experience

